<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.layout.VBox?>
<VBox alignment="CENTER" spacing="10"
      fx:controller="com.gazman.coco.desktop.controllers.WelcomeScreenController"
      GridPane.columnIndex="0" GridPane.rowIndex="1" xmlns="http://javafx.com/javafx/8.0.121"
      xmlns:fx="http://javafx.com/fxml/1">
    <padding>
        <Insets bottom="16.0" left="16.0" right="16.0" top="16.0"/>
    </padding>
    <Label text="Welcome" textAlignment="CENTER"/>

    <Button alignment="CENTER" text="Create wallet" onAction="#createWallet"/>

    <Button alignment="CENTER" text="Restore wallet" onAction="#restoreWallet"/>

</VBox>
